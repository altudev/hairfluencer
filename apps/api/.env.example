# Database
DATABASE_URL=postgres://user:password@localhost:5432/hairfluencer

# Authentication
BETTER_AUTH_SECRET=replace-with-32-char-secret
BETTER_AUTH_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# fal.ai Integration
FAL_API_KEY=
FAL_MODEL_ID=nano-banana/edit
FAL_ALLOWED_IMAGE_HOSTS=
FAL_RETRY_MAX_ATTEMPTS=3
FAL_RETRY_BASE_DELAY_MS=500
FAL_RETRY_MAX_DELAY_MS=5000
FAL_CIRCUIT_FAILURE_THRESHOLD=5
FAL_CIRCUIT_OPEN_MS=30000

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6378
# Or override host/port individually
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6378
# REDIS_DISABLE=true

# AWS S3 Storage (selfie uploads and processed results)
# Buckets must remain private and enforce lifecycle rules
AWS_REGION=us-east-1
AWS_S3_UPLOAD_BUCKET=hairfluencer-uploads-dev
AWS_S3_PROCESSED_BUCKET=hairfluencer-processed-dev
S3_MAX_UPLOAD_BYTES=16777216
S3_UPLOAD_URL_TTL_SECONDS=300
S3_DOWNLOAD_URL_TTL_SECONDS=300
S3_UPLOAD_RETENTION_HOURS=24
S3_RESULT_RETENTION_DAYS=7
S3_MAX_RETRY_ATTEMPTS=3
S3_RETRY_BACKOFF_SECONDS=2

# Adapty Integration (payments and subscriptions)
# Get keys from: https://app.adapty.io/settings/general
ADAPTY_PUBLIC_KEY=public.adapty.your-public-key
ADAPTY_SECRET_KEY=secret.adapty.your-secret-key
